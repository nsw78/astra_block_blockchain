# ── AstraBlock Configuration ──

# Environment: production | staging | development
ENVIRONMENT=development

# ── External API Keys ──
ETHERSCAN_API_KEY=
RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
OPENAI_API_KEY=

# ── Security ──
ADMIN_API_KEY=change-me-to-a-strong-secret

# ── Rate Limiting ──
RATE_LIMIT_CALLS=120
RATE_LIMIT_PERIOD=60

# ── CORS (JSON array) ──
CORS_ORIGINS=["http://localhost:3003","http://localhost:8083"]

# ── Logging ──
LOG_LEVEL=INFO
LOG_FORMAT=json

# ── Storage Paths ──
FAISS_INDEX_PATH=./data/faiss.index
APIKEY_DB_PATH=./data/apikeys.db

# ── Ports (docker-compose) — chosen to avoid conflicts ──
API_PORT=8083
FRONTEND_PORT=3003
